<Slide1@FloatLayout>:
   
    canvas.after:
        Color:
            rgba: rgba('#ff3300')
        Rectangle:
            size: self.size[0], self.height/2.882882883
            pos: self.pos
        
        Color:
            rgba: rgba('#ff3300')
        Ellipse:
            size: root.width/3.5, root.height/6.588235294
            pos: (-(root.width/3.5))+((root.width/3.5)/2), (self.pos[1]+((root.height/6.588235294)*2.22))-((root.height/6.588235294)/2)

        Color:
            rgba: rgba('#FF2E00')
        Ellipse:
            size: root.width/3.5, root.height/6.588235294
            pos: (root.width/3.5)/2,  (self.pos[1]+((root.height/6.588235294)*2.22))-((root.height/6.588235294)/2)

        Color:
            rgba: rgba('#FF2E00')
        Ellipse:
            size: root.width/3.5, root.height/6.588235294
            pos:  (root.width/3.5)*2-((root.width/3.5)/2) , (self.pos[1]+((root.height/6.588235294)*2.22))-((root.height/6.588235294)/2)

        Color:
            rgba: rgba('#FF2E00')
        Ellipse:
            size: root.width/3.5, root.height/6.588235294
            pos: root.width-(root.width/3.5), (self.pos[1]+((root.height/6.588235294)*2.22))-((root.height/6.588235294)/2)
        
        
<Slide2@FloatLayout>:
    canvas.after:
        Color:
            rgba: rgba('#EEEEEE')

<Starting>:
    slide_one: slide_one
    canvas.before:
        Color:
            rgba: rgba('#ff8000')
        Rectangle:
            size: self.size
            pos: self.pos

    Slide1:
        id: slide_one
        yy: 0
        size_hint: 1, 1
        pos_hint: {'top':self.yy}

    Label:
        id: me
        text: '@shogunbanik_18'.title()
        size_hint: None, None
        size: self.texture_size
        pos_hint: {'y':0.011, 'center_x':0.5}
        font: 55
        underline: False
        font_style: 'montesserat'
        o: 0
        color: [51/255,10/255,0,1] 

    MDLabel:
        id: lbl00
        text: 'CALCI'
        markup: True
        halign: 'center'
        font_style: 'H3'
        bold:True
        op: 0
        color: [0,0,0,self.op]
        underline:False

    Slide2:
        id: slide_two
        yy: 1.5
        size_hint: 1, 1
        pos_hint: {'y':self.yy} 
        underline: False 